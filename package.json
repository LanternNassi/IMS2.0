{
    "name": "ims-desktop",
    "version": "1.0.9",
    "description": "IMS Desktop Application - Inventory Management System",
    "main": "electron/main.js",
    "author": "Ntambi Nassim",
    "license": "MIT",
    "scripts": {
        "start": "electron .",
        "dev:app": "cd frontend && npm run dev:all",
        "dev:backend": "cd backend/ImsServer && dotnet watch run",
        "build:frontend": "cd frontend && npm run build",
        "build:backend": "cd backend/ImsServer && dotnet publish -c Release -o ../../dist/backend --self-contained true -r win-x64",
        "package:backend-service": "powershell -ExecutionPolicy Bypass -Command \"$version = (Get-Content package.json | ConvertFrom-Json).version; & scripts/package-backend-service.ps1 -Version $version -OutputDir release -BackendDir dist/backend\"",
        "build:all": "npm run build:frontend && npm run build:backend",
        "pack": "npm run build:all && electron-builder --dir",
        "dist": "npm run build:all && electron-builder",
        "dist:win": "npm run build:all && electron-builder --win",
        "dist:server": "cross-env APP_MODE=server npm run build:all && cross-env APP_MODE=server electron-builder --win",
        "dist:client": "cross-env APP_MODE=client npm run build:frontend && cross-env APP_MODE=client electron-builder --win --config electron-builder-client.config.js",
        "postinstall": "electron-builder install-app-deps"
    },
    "dependencies": {
        "@fontsource/figtree": "^5.1.1",
        "electron-is-dev": "^2.0.0",
        "electron-updater": "^6.1.7",
        "exceljs": "^4.4.0",
        "next": "13.4.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "wait-on": "^8.0.1",
        "electron-store": "^8.2.0"
    },
    "devDependencies": {
        "concurrently": "^8.2.0",
        "cross-env": "^7.0.3",
        "electron": "^27.2.0",
        "electron-builder": "^24.6.0"
    },
    "build": {
        "appId": "com.ims.desktop.server",
        "productName": "IMS Desktop",
        "copyright": "Copyright Â© 2025",
        "directories": {
            "output": "release",
            "buildResources": "build"
        },
        "files": [
            "electron/**/*",
            "dist/frontend/**/*",
            "electron/node_modules/**/*",
            "!dist/backend/**/*",
            "package.json"
        ],
        "extraResources": [
            {
                "from": "dist/backend",
                "to": "backend",
                "filter": ["**/*"]
            }
        ],
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": ["x64"]
                }
            ],
            "icon": "build/icon.ico",
            "requestedExecutionLevel": "requireAdministrator"
        },
        "nsis": {
            "oneClick": false,
            "perMachine": true,
            "allowElevation": true,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "IMS Desktop",
            "installerIcon": "build/icon.ico",
            "uninstallerIcon": "build/icon.ico",
            "license": "LICENSE.txt",
            "include": "build/installer.nsh",
            "deleteAppDataOnUninstall": false
        },
        "publish": {
            "provider": "github",
            "owner": "LanternNassi",
            "repo": "IMS2.0",
            "releaseType": "release",
            "channel": "server"
        }
    }
}
